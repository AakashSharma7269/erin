            position: relative;
            animation: changeBackground 10s ease-in-out infinite;
        }

        @keyframes changeBackground {
            0% {
                background-position: 0 50%;
            }

            50% {
                background-position: 100% 50%;
            }

            100% {
                background-position: 0 50%;
            }
        }
